<main class="edit">
    <!-- Edit Page (Only for logged-in users) -->
    <section id="create">
        <div class="form">
            <h2>Edit item</h2>
            <form class="create-form" method="POST">
                <input type="text" name="name" id="name" placeholder="Name" value="{{creatures.name}}" />
                <input type="text" name="years" id="years" placeholder="Years" value="{{creatures.years}}" />
                <input type="text" name="kind" id="kind" placeholder="Kind" value="{{creatures.kind}}" />
                <input type="text" name="image" id="animal-img" placeholder="Image url" value="{{creatures.image}}" />
                <input type="text" name="need" id="needs-of" placeholder="Needs of" value="{{creatures.need}}" />
                <input type="text" name="location" id="location" placeholder="Location"
                    value="{{creatures.location}}" />
                <textarea id="description" placeholder="Description..."
                    name="description">{{creatures.description}}</textarea>

                <button type="submit">Edit</button>
            </form>
        </div>
    </section>
</main>