<main id="edit">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Game Code Offer</h1>
            <form method="POST">
                <label>Platform:</label>
               
                <select id="platform" name="platform">
                    <option value="{{platform}}" hidden="hidden" selected="selected">{{platform}}</option>
                    <option value="">-------</option>
                    <option value="PC">PC</option>
                    <option value="Nintendo">Nintendo</option>
                    <option value="PS4">PS4</option>
                    <option value="PS5">PS5</option>
                    <option value="XBOX">XBOX</option>

                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{creatures.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{creatures.image}}"
                    placeholder="https://image.api.playstation.com/vulcan/ap/rnd/202208/0921/dR9KJAKDW2izPbptHQbh3rnj.png">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{creatures.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{creatures.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{creatures.description}}</textarea>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>